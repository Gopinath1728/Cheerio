<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dashboard.goal_setting.ActiveFragment.ActiveGoalFragment">

    <TextView
        android:id="@+id/txt_no_active_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No goals are set for today. Click on '+' icon to add."
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:textAlignment="center"
        android:fontFamily="@font/hvd"
        android:textStyle="italic"
        android:textColor="@color/text_grey"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_active_goals"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10dp" />



    <ImageView
        android:id="@+id/img_add_goals"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/add_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"/>




</RelativeLayout>