<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profile.my_profile.MyProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_my_prof_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/arrow_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:fontFamily="@font/robot_med"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:padding="5dp"/>

        <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/round"
                android:padding="5dp"
                android:src="@drawable/man" />

            <ImageView
                android:id="@+id/change_dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/change_icon" />

        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Details"
            android:fontFamily="@font/robot_med"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full name"
            android:fontFamily="@font/robot_med"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginStart="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/borderline"
            android:id="@+id/user_box_name">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:fontFamily="@font/hvd"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="5dp"
                android:layout_marginStart="5dp" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:fontFamily="@font/robot_med"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginStart="5dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/borderline"
            android:id="@+id/user_box_dob">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/birthday_cake"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/txt_user_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="04 June 1999"
                android:fontFamily="@font/hvd"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="5dp"
                android:layout_marginStart="5dp" />

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:fontFamily="@font/robot_med"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginStart="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/borderline"
            android:id="@+id/user_box_gender">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gender"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/txt_user_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/hvd"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp" />

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Details"
            android:fontFamily="@font/robot_med"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone number"
            android:fontFamily="@font/robot_med"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginStart="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/borderline"
            android:id="@+id/user_box_phone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/birthday_cake"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/txt_user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+44 07442564282"
                android:fontFamily="@font/hvd"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="5dp" />

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/robot_med"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginStart="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/borderline">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/email"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/txt_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gopinath@gmail.com"
                android:fontFamily="@font/hvd"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="5dp" />

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:fontFamily="@font/robot_med"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginStart="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/borderline"
            android:id="@+id/user_box_address">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/txt_user_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Address"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/hvd"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp" />

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Details"
            android:fontFamily="@font/robot_med"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height (cm)"
            android:fontFamily="@font/robot_med"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginStart="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/borderline"
            android:id="@+id/user_box_height">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/height"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/txt_user_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:fontFamily="@font/hvd"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight (kg)"
            android:fontFamily="@font/robot_med"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginStart="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/borderline"
            android:id="@+id/user_box_weight">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weighing_scale"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/txt_user_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60"
                android:fontFamily="@font/hvd"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alcohol Consumption"
            android:fontFamily="@font/robot_med"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginStart="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/borderline"
            android:id="@+id/user_box_alcohol">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wine"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/txt_alcohol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rarely"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/hvd"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp"/>

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smoking"
            android:fontFamily="@font/robot_med"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginStart="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/borderline"
            android:id="@+id/user_box_smoke">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/smoking"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/txt_smoking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Never"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/hvd"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp"/>

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    </LinearLayout>

</ScrollView>